use_nvm() {
    NODE_VERSION="$1"
    if [ "$NODE_VERSION" == "" ]; then NODE_VERSION='--lts'; fi
    type nvm >/dev/null 2>&1 || . ~/.config/nvm/nvm.sh
    nvm use "$NODE_VERSION"
    tmp=`mktemp`
    npm completion > $tmp
    . $tmp
    rm $tmp
}

# cat README.nfo in each dir 
use_readme() {
    if [ -r README.nfo ]; then echo '--- readme.nfo ---' && more README.nfo && echo '------------------'; fi
}
